<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="website.homepage" priority="29" name="Eficent">
        <t t-call="website.layout">
            <t t-set="pageName" t-value="'homepage'"/>
            <div id="wrap" class="oe_structure oe_empty">
                <t t-call="eficent_website.init_header_homepage_eficent"/>
                <t t-call="eficent_website.content_homepage_eficent"/>
            </div>
        </t>
    </template>

    <template id="eficent_website.init_header_homepage_eficent" name="Eficent - Header">
        <div class="parallax s_parallax oe_img_bg e_header" style="background-image: url('/eficent_website/static/src/img/eficent_background.png');"
            data-scroll-background-ratio="1.6">
            <div class="oe_structure"/><div class="container text-center">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-4 jumbotron jumbotron-iot showcase-right text-black">
                        <img class="img-responsive logo" alt="odoo logo"
                                src="eficent_website/static/src/img/eficent_logo.png"/>
                        <font class="text-gray-darker" style="font-size: 24px;">
                        <h3 class="title text-center">
                            Welcome to the Demand Driven Industry 4.0
                        </h3>
                        </font>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="eficent_website.content_homepage_eficent" name="Services Content">
        <section class="" id="services">
            <div class="oe_structure"/>
            <div class="container">
                <hr/>
                <div class="row showcase-left">
                    <div class="col-md-7 e_first_section_display">
                        <a href="/become-demand-driven-enterprise">
                            <img class="img-responsive rec-img" src="eficent_website/static/src/img/ddae2.png" alt="demand driven adaptive enterprise"/>
                        </a>
                    </div>
                    <div class="col-md-5">
                        <h3>Become <b>Now</b> a <b>Demand Driven Enterprise</b></h3>
                        <p>Demand Driven Adaptive Enteprises sense the changes from the market and adapt their planning and execution to improve Return on Investment.</p>
                        <a class="btn btn-primary" href="/become-demand-driven-enterprise">
                            More Info
                            <span class="glyphicon glyphicon-chevron-right"/>
                        </a>
                        <a class="btn btn-primary" href="/ddmrp-planner-workshop">
                            Attend to a Demand Driven Planner Workshop
                            <span class="glyphicon glyphicon-chevron-right"/>
                        </a>
                    </div>
                </div>
                <hr/>
                <div class="row showcase-left">
                    <div class="col-md-7">
                        <a href="/odoo-digital-transformation">
                            <img class="img-responsive rec-img" src="eficent_website/static/src/img/eficent_website_odoo.png" alt="Odoo implementation services"/>
                        </a>
                    </div>
                    <div class="col-md-5">
                        <h3>We deliver the <b>Digital Transformation</b> with Odoo</h3>
                        <p>Odoo is the best Applications Platform for your company to embrace the Digital Transformation.</p>
                        <p>With dozens of projects delivered worldwide and more than 100 apps published, our team is the right companion to help your business become Digital.</p>

                        <a class="btn btn-primary" href="/odoo-digital-transformation">
                            More Info
                            <span class="glyphicon glyphicon-chevron-right"/>
                        </a>
                    </div>
                </div>
                <hr/>
                <div class="row showcase-left">
                    <div class="col-md-7">
                        <a href="/iot-vision">
                            <img class="img-responsive rec-img" src="eficent_website/static/src/img/iot_integrations_with_odoo_700_300.png" alt="eficent.io"/>
                        </a>
                    </div>
                    <div class="col-md-5">
                        <h3><b>Connect</b> the physical and digital worlds with smart devices</h3>
                        <p>We manufacture and deliver devices that seamlessly integrate business processes with Odoo. Simple.</p>
                        <p>We apply Odoo and Demand Driven to our own manufacturing and logistics processes.</p>
                        <a class="btn btn-primary" href="/iot-vision">
                            More Info
                            <span class="glyphicon glyphicon-chevron-right"/>
                        </a>

                    </div>
                </div>
                <hr/>
            </div>
        </section>
    </template>

</odoo>