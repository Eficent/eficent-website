<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="eficent_website.page-iot-development" name="RFID Attendance System v2.0">
        <t t-call="website.layout">
            <t t-set="pageName" t-value="'page_iot_development'"/>
            <div id="wrap" class="oe_structure oe_empty">
                <t t-call="eficent_website.iot_development_init_header"/>
            </div>
        </t>
    </template>

    <record id="eficent_website.page_iot_development" model="website.page">
        <field name="url">/iot-development</field>
        <field name="website_indexed">False</field>
        <field name="website_published">True</field>
        <field name="view_id" ref="page-iot-development"/>
    </record>

    <template id="eficent_website.iot_development_init_header" name="Initial Header">
        <div class="parallax s_parallax oe_img_bg e_header" style="background-image: url('/eficent_website/static/src/img/iot_integrations_with_odoo_1900_1080.jpg');"
            data-scroll-background-ratio="1.6">
            <div class="oe_structure"/><div class="container text-center">
                <div class="row">
                    <div class="col-lg-4 col-lg-o   ffset-8 jumbotron jumbotron-iot showcase-right">
                        <h2 style="font-size: 32px;" class="text-white">Open Hardware</h2>
                        <h1 style="font-size: 70px;" class="text-white">IoT</h1>
                        <h2 style="font-size: 32px;" class="text-white">
                            <b>solutions</b>
                            for
                        </h2>
                        <img class="img-responsive logo" alt="odoo logo"
                                src="eficent_website/static/src/img/media/iot/odoo_logo.png"/>
                    </div>
                </div>
            </div>
        </div>
    </template>


</odoo>